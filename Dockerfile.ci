FROM golang:1.18

WORKDIR /usr/src/app

COPY go.mod go.sum ./
RUN go mod download && go mod verify

COPY . .
COPY frontend/ /usr/frontend/

RUN go build -v -o /usr/local/bin/app ./...

EXPOSE 80
CMD ["app"]

